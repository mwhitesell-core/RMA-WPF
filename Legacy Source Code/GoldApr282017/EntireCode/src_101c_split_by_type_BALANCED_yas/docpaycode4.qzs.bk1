can clear
set rep nolimit
set rep device disc name docpaycode4
set formfeed
set page length 61 page width 132

access *docpaycode4 

 sort on doc-name on doc-inits on doc-nbr
; sort on doc-dept on doc-nbr

page heading                                         &
       tab 1  "docpaycode4"			     &
skip 1 tab 1  sysdate                                &
       tab 15 "Pay code 4 Doctors (billing cutoff of 15th)" &
       tab 62 "Page: "                               & 
       tab 68 syspage	                             &
skip 2                                               &
       tab 1  "CL"                                   &
       tab 5  "DEPT"                                 &
       tab 11 "DOC"                                  &
       tab 16 "DOC NAME"                             &
       tab 40 "INITS"                                &
       tab 47 "PAY CD"                               &
       tab 55 "TERM DATE"                            &
skip 2

;HEADING AT DOC-NBR SKIP 1

footing at doc-name				  	  &
       tab 2  doc-clinic-nbr                              &
       tab 6  doc-dept                                    &
       tab 11 doc-nbr fill '0'                            &
       tab 16 doc-name                                    &
       tab 40 doc-inits                                   &
       tab 50 doc-pay-code                                &
       tab 51 doc-pay-sub-code                            &
       tab 55 doc-date-fac-term pic "^^^^/^^/^^" bwz      &
skip 2

build $pb_obj/docpaycode4b



