def clinic-nbr char*2 = parm prompt 'Enter Clinic: '

;!choose key-clm-type 'B', key-clm-batch-nbr 220000000 to 229999999
choose key-clm-type 'B', key-clm-batch-nbr (clinic-nbr + '@')


define x-ped cha*8 = parm prompt 'ENTER PERIOD END DATE (YYYYMMDD): '

select if  clmhdr-adj-oma-cd <> '0000' and clmhdr-adj-oma-cd <> 'ZZZZ' &
         and clmdtl-adj-nbr = 0 and clmdtl-date-period-end = x-ped
