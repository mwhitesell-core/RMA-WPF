echo  '6. SORT ON DEPT ON CLASS  (ALPHA)'
echo 
echo  '7. SORT ON CLINIC ON DEPT ON CLASS (NUMERIC)'
echo  '8. SORT ON CLINIC ON DEPT ON CLASS (ALPHA)'
echo 
echo 
echo "ENTER OPTION:"
read var3
echo 

if [ ! -f $cmd/signaturelabels${var3} ]
then
   echo "Invalid Option!"
   exit
fi

$cmd/signaturelabels${var3} $var0 $var1 $var2
