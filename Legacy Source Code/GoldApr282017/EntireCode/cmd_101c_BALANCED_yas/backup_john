echo  "backup_john"
echo  
echo 'HIT  "NEWLINE"  TO COMMENCE BACKUPS ...'
read garbage

echo 
echo  BACKUP NOW COMMENCING ...

date 
echo  

cd $pb_data2
pwd

/bin/ls ma/john*.sf* > ma/backup_john.ls
echo
date
cat ma/backup_john.ls |cpio -ocuvB > /dev/rmt/1
echo
date
echo "DONE!"
 
mt -f /dev/rmt/1 rewind
