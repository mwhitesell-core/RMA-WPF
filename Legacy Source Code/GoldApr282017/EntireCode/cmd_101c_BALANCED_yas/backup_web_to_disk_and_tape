echo  "backup_web_to_disk_and_tape"
echo  
## 2010/09/29	M.C.	- backup web1 to 10  

echo  
date 
echo  

echo "Finding production web files ..."
cd $application_root
pwd
find production/web/*  		  -print >  data/backup_web.ls  
find production/web1/* 	 	  -print >> data/backup_web.ls
find production/web2/* 	 	  -print >> data/backup_web.ls
find production/web3/* 	 	  -print >> data/backup_web.ls
find production/web4/* 	 	  -print >> data/backup_web.ls
find production/web5/* 	 	  -print >> data/backup_web.ls
find production/web6/* 	 	  -print >> data/backup_web.ls
find production/web7/* 	 	  -print >> data/backup_web.ls
find production/web8/* 	 	  -print >> data/backup_web.ls
find production/web9/* 	 	  -print >> data/backup_web.ls
find production/web10/*	 	  -print >> data/backup_web.ls
echo 
date


echo "Backup to disk commencing ..."

cat   data/backup_web.ls |cpio -ocuvB | compress -c  > /charly/backup_transfer_area/backup_101c_web.cpio


echo "Starting copy of file to tape ..."
pwd

echo
date
cat   data/backup_web.ls | cpio -ocuvB > /dev/rmt/0 

echo
date
echo
echo Rewinding tape ...

mt -f /dev/rmt/0 rewind



echo " "
date
echo "DONE!"



