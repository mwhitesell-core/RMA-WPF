# reload_earnings_monthend 
# parameters: $1 contains the EP being run

# 2000/jul/11 B.E. - original

echo
echo "Uncompress backup files on disk ..."
cd $application_root

uncompress data/backup_earnings_mthend${1}.cpio
echo

date
echo "Reloading files ... note using 'daily' file for reload"
#cpio -iucvB -E  data/reload_earnings_daily.reload  < data/backup_earnings_mthend${1}.cpio
cpio -iucvB  < data/backup_earnings_mthend${1}.cpio
echo
date
echo 

echo "Re-compress backup files ... "
compress data/backup_earnings_mthend${1}.cpio
echo
date
echo

echo "DONE !"
