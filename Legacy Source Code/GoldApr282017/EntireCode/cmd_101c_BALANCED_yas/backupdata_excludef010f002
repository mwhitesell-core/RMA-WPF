echo  "backupdata"
echo  
echo 'HIT  "NEWLINE"  TO COMMENCE BACKUPS ...'
read garbage

echo 
echo 
echo  BACKUP NOW COMMENCING ...

date 
echo  
echo "Finding directories with sub directories and files..."

cd /
pwd

echo "Finding files in '101c' ..."
find /alpha/rmabill/rmabill101c/data                            \
                \(   ! -name 'f010_pat_mstr'                    \
                  -o ! -name 'f010_pat_mstr.idx'                \
                  -o ! -name 'f002_claims_mstr'                 \
                  -o ! -name 'f002_claims_mstr.idx'             \
                \)                      -print >  $pb_data/backupdata.ls

echo "Finding files in 'icu' ..."
find /alpha/rmabill/rmabillicu/data/*	-print >> $pb_data/backupdata.ls 

echo "Finding files in 'mp' ..."
find /alpha/rmabill/rmabillmp/data/*	-print >> $pb_data/backupdata.ls 

echo "Finding files in '101' ..."
find /alpha/rmabill/rmabill101/data/*	-print >> $pb_data/backupdata.ls 

echo
date

echo "backup to tape commencing ..."

cat $pb_data/backupdata.ls |cpio -ocuvB > /dev/rmt/1
echo
date
echo "DONE!"
 
mt -f /dev/rmt/1 rewind
