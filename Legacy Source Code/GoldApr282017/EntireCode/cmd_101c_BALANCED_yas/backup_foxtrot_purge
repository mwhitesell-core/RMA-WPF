echo "backup_foxtrot_purge"
echo  
echo "Hit NEWLINE to contine ..."
read garbage

echo 
echo  BACKUP NOW COMMENCING ...

date 
echo  
cd /foxtrot/purge
pwd
find    /foxtrot/purge/* \
       -prune !  -type d      -print >  /foxtrot/purge/backup_foxtrot_purge.ls
find    /foxtrot/purge/mp/* \
       -prune !  -type d      -print >> /foxtrot/purge/backup_foxtrot_purge.ls
find    /foxtrot/purge/solo/* \
       -prune !  -type d      -print >> /foxtrot/purge/backup_foxtrot_purge.ls
date
cat     /foxtrot/purge/backup_foxtrot_purge.ls | cpio -ocuvB > /dev/rmt/0
echo
date
echo Rewinding tape ...
mt -f /dev/rmt/0 rewind

echo
echo Performing Tape Verify ...
echo
cpio -itcvB < /dev/rmt/0 >  /foxtrot/purge/backup_foxtrot_purge.log
echo
date
echo
echo Comparing lines in .ls vs .log
ls -l /foxtrot/purge/backup_foxtrot_purge.ls /foxtrot/purge/backup_foxtrot_purge.log
echo
cat /foxtrot/purge/backup_foxtrot_purge.ls  | wc -l
cat /foxtrot/purge/backup_foxtrot_purge.log | wc -l

echo
echo ENSURE above record counts MATCH!
echo
date
echo
echo "DONE!"
