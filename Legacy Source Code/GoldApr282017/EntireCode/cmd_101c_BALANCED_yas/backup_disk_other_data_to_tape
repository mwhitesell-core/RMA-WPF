
# backup disk other data on tape

echo
date
echo

cd /charly/backup_transfer_area

find backup_101_data.cpio  -print >   backup_disk_other_data_on_tape.ls
find backup_mp_data.cpio   -print >>  backup_disk_other_data_on_tape.ls
find backup_solo_data.cpio -print >>  backup_disk_other_data_on_tape.ls

cat backup_disk_other_data_on_tape.ls		\
		| cpio -ocuvB 		\
                | dd of=/dev/rmt/1
mt -f /dev/rmt/1 rewind

echo
date
echo

# To restore all files from tape:
# dd if=/dev/rmt/1 | cpio -icuvB
# To restore some files from filelist
# dd if=/dev/rmt/1 | uncompress | cpio -icuvB -E <filename>
# To verify the tape
# dd if=/dev/rmt/1 | uncompress | cpio -icvt
