echo 
echo "Micro fiche processing requires that each report line of a Powerhouse"
echo "generated report ends with CR. This pgm substitutes LF with CR+LF."
echo
#'sub(/$/, "\015")'
#'if (NR == 1) '
#'	sub(/^/, "\015\014")'

mv $1 input_file.tmp
cat input_file.tmp | 	\
awk 'BEGIN{
#FF="\014\012"
#print FF			# insert FF/LF at begining of report
}
{
gsub(/\014/,"\014\012",$0)	# insert LF after FF
print $0
}' 	> $1

rm input_file.tmp
