echo  "backup_web"
echo  
## 2009/11/18	M.C.	- backup web1 to 10  

echo  
date 
echo  

echo "Finding production web files ..."
cd $application_root
pwd
find production/web/w*   		  -print >> data/backup_web.ls  
find production/web1/w* 	 	  -print >> data/backup_web.ls
find production/web2/w* 	 	  -print >> data/backup_web.ls
find production/web3/w* 	 	  -print >> data/backup_web.ls
find production/web4/w* 	 	  -print >> data/backup_web.ls
find production/web5/w* 	 	  -print >> data/backup_web.ls
find production/web6/w* 	 	  -print >> data/backup_web.ls
find production/web7/w* 	 	  -print >> data/backup_web.ls
find production/web8/w* 	 	  -print >> data/backup_web.ls
find production/web9/w* 	 	  -print >> data/backup_web.ls
find production/web10/w*	 	  -print >> data/backup_web.ls
echo 
date


mt -f /dev/rmt/1 rewind

echo "Starting copy of file to tape ..."
cd $application_root
pwd

echo
date

cat       data/backup_web.ls | cpio -ocuvB > /dev/rmt/1 

echo
date
echo
echo Rewinding tape ...

mt -f /dev/rmt/1 rewind



echo " "
date
echo "DONE!"



