<Window x:Class = "rma.Views.HelpWindow" 
        xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:d = "http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:my = "clr-namespace:rma" 
       xmlns:myControl="clr-namespace:Core.Windows.UI.Core.Windows.UI;assembly=Core.Windows.UI"
        ResizeMode = "NoResize" 
        WindowStyle = "ThreeDBorderWindow" 
        ShowInTaskbar = "False" 
        WindowStartupLocation = "CenterOwner" Title = "Help" Width = "580" Height = "520"  Icon = "/rma;component/rma.ico" >
	<Viewbox x:Name = "view">
		<Grid x:Name = "LayoutRoot" Width = "560" Height = "480">

			<Button x:Name = "OKButton" Content = "OK" Click = "OkButtonClick" Width = "100" Height = "25" HorizontalAlignment = "Right" Margin = "0,439,10,16"  IsDefault = "True"/>

			 <TextBlock Margin = "20,-10,0,0" HorizontalAlignment = "Left" VerticalAlignment = "Top" FontFamily="HammerFat" FontWeight = "Bold" FontSize = "60" Height = "Auto" Foreground = "#FF003876" ><Run Text="rma"/></TextBlock>


            <TextBox Height = "375" HorizontalAlignment = "Center" Margin = "0,62,0,0" x:Name = "Message" VerticalAlignment = "Top" IsReadOnly = "True" Width = "540" TextWrapping = "WrapWithOverflow" VerticalScrollBarVisibility = "Auto" />
		</Grid>
	</Viewbox>
</Window>