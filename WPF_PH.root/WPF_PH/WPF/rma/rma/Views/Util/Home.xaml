<UserControl x:Class = "rma.Views.Home" xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d = "http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable = "d" d:DesignWidth = "1000" d:DesignHeight = "480">

    <Grid x:Name = "LayoutRoot" Style = "{StaticResource ScreenBackGroundStyle}">

        <Rectangle Height = "40" VerticalAlignment = "Top" Fill = "#FF4C739F"/>

        <StackPanel HorizontalAlignment = "Center" VerticalAlignment = "Center">
            <TextBlock Margin = "0,60,0,0" HorizontalAlignment = "Center" FontFamily="HammerFat" FontWeight = "Bold" FontSize = "310" Height = "Auto" Foreground = "#FF003876" ><Run Text="rma"/></TextBlock>
            <TextBlock Text = "Coming Soon..." Margin = "0,60,0,0" HorizontalAlignment = "Center" FontWeight = "Bold" FontSize = "48" Height = "Auto" Foreground = "Crimson" Visibility = "Hidden" Name = "SplashMessage"/>
        </StackPanel>
    </Grid>

</UserControl>