<Application x:Class = "rma.App" xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:app = "clr-namespace:rma" 
             xmlns:res = "clr-namespace:Core.Resources" 
             StartupUri = "MainWindow.xaml" Startup = "ApplicationStartup" Exit = "ApplicationExit"
             ShutdownMode ="OnMainWindowClose"
             DispatcherUnhandledException = "ApplicationDispatcherUnhandledException">

	<Application.Resources>

		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source = "Assets/Styles.xaml"/>
				<ResourceDictionary>
					<res:ResourceWrapper x:Key = "ResourceWrapper"/>
				</ResourceDictionary>
			</ResourceDictionary.MergedDictionaries>
            <Style x:Key="RectangleStyle1" TargetType="{x:Type Rectangle}"/>

        </ResourceDictionary>

	</Application.Resources>
</Application>